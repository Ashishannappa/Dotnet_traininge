@model IEnumerable<HotelSystem.Models.HotelDb>

@{
    ViewData["Title"] = "Index";
}

<h1>Customers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOJ)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOJ)
            </td>
  
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="color: blue; text-decoration: none; margin-right: 10px;">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" style="color: green; text-decoration: none; margin-right: 10px;">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" style="color: red; text-decoration: none;">Delete</a>
                </td>



        </tr>
}
    </tbody>
</table>
